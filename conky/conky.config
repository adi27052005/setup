--[[
###################################
##  doom-one-01.conkyrc (dwm)  ##
###################################
]]

conky.config = {

	--Various settings
	background = true, 							-- forked to background
	cpu_avg_samples = 2,						-- The number of samples to average for CPU monitoring.
	diskio_avg_samples = 10,					-- The number of samples to average for disk I/O monitoring.
	double_buffer = true,						-- Use the Xdbe extension? (eliminates flicker)
	if_up_strictness = 'address',				-- how strict if testing interface is up - up, link or address
	net_avg_samples = 2,						-- The number of samples to average for net data
	no_buffers = true,							-- Subtract (file system) buffers from used memory?
	temperature_unit = 'celsius',			-- fahrenheit or celsius
	text_buffer_size = 2048,					-- size of buffer for display of content of large variables - default 256
	update_interval = 1,						-- update interval
	imlib_cache_size = 0,                       -- disable image cache to get a new spotify cover per song

	-- Placement (Conky on MIDDLE of THREE monitors at 1920x1080)
	--alignment = 'top_left',		                -- top_left,top_middle,top_right,bottom_left,bottom_middle,bottom_right,
	--gap_x = 3540,                               -- pixels between right or left border
	--gap_y = 70,									-- pixels between bottom or left border

    -- Placement (For SINGLE monitor users!)
	alignment = 'middle_right',		            -- top_left,top_middle,top_right,bottom_left,bottom_middle,bottom_right,
	gap_x = 30,								-- pixels between right or left border
	gap_y = 0,								-- pixels between bottom or left border

    -- Size
    minimum_height = 00,						-- minimum height of window
	minimum_width = 260,						-- minimum width of window
	maximum_width = 260,						-- maximum height of window

	--Graphical
	border_inner_margin = 5, 					-- margin between border and text
	border_outer_margin = 5, 					-- margin between border and edge of window
	border_width = 1, 							-- border width in pixels
	default_bar_width = 260,					-- default is 0 - full width
	default_color = '#56b6c2',
	default_bar_height = 10,					-- default is 6
	default_gauge_height = 25,					-- default is 25
	default_gauge_width =40,					-- default is 40
	default_graph_height = 40,					-- default is 25
	default_graph_width = 153,					-- default is 0 - full width
	default_shade_color = '#000000',			-- default shading colour
	default_outline_color = '#000000',			-- default outline colour
	draw_borders = true,						-- draw borders around text
	draw_graph_borders = true,					-- draw borders around graphs
	draw_shades = true,						-- draw shades
	draw_outline = false,						-- draw outline
	stippled_borders = 0,						-- dashing the border

	--Textual
	format_human_readable = true,				-- KiB, MiB rather then number of bytes
	font  = 'JetBrainsMonoNerdFont:bold:size=10',  	-- the default font used
	font2 = 'Quicksand:regular:size=30',         	-- font for the time
	font3 = 'Quicksand:size=14',               	-- font for the date
	font4 = 'Quicksand:bold:size=9',              -- font for the keybindings heading
	max_text_width = 0,							-- 0 will make sure line does not get broken if width too smal
	max_user_text = 16384,						-- max text in conky default 16384
	override_utf8_locale = true,				-- force UTF8 requires xft
	short_units = true,							-- shorten units from KiB to k
	top_name_width = 21,						-- width for $top name value default 15
	top_name_verbose = false,					-- If true, top name shows the full command line of  each  process - Default value is false.
	uppercase = false,							-- uppercase or not
	use_spacer = 'none',						-- adds spaces around certain objects to align - default none
	use_xft = true,								-- xft font - anti-aliased font
	xftalpha = 1,								-- alpha of the xft font - between 0-1

	--Windows
	own_window = true,							-- create your own window to draw
	own_window_argb_value = 255,			    -- real transparency - composite manager required 0-255
	own_window_argb_visual = true,				-- use ARGB - composite manager required
	own_window_class = 'Conky',					-- manually set the WM_CLASS name for use with xprop
	-- own_window_colour = '#191e2a',				-- set colour if own_window_transparent no
	own_window_colour = '#191e2a',				-- set colour if own_window_transparent no
	own_window_transparent = false,				-- if own_window_argb_visual is true sets background opacity 0%
	own_window_title = 'xmonad_conky',			-- set the name manually
	own_window_type = 'override',				-- if own_window true options are: normal/override/dock/desktop/panel
	own_window_hints = 'undecorated,below,above,sticky,skip_taskbar,skip_pager',  -- if own_window true - just hints - own_window_type sets it

	--Colors (Doom One)
	color0 = '#56b6c2',
	color1 = '#abb2bf',
	color0 = '#56b6c2',
	color0 = '#56b6c2',
};

conky.text = [[
${alignc}${color0}${font2}${time %I:%M %p}${font}
${voffset 6}${alignc}${color0}${font3}${time %b %d, %Y %A}${font}${color}

${goto 12}${color0} ${color1}System ${color0}${hr}

${goto 12}${color0}Hostname${alignr}${color1}${nodename_short}
${goto 12}${color0}System Type${alignr}${color1}${machine}
${goto 12}${color0}User${alignr}${color1}${user_names}
${goto 12}${color0}Uptime${alignr}${color1}${uptime}

${voffset 18}${goto 12}${color0} ${color1}CPU ${color0}${hr}

${goto 12}$cpu% ${alignr 5}${freq}MHz
${color0}${goto 12}${cpubar 8,254}
${voffset 5}${goto 12}$font${color1}${top name 1}$alignr$color${top cpu 1}%
${goto 12}${color1}${top name 2}$alignr$color${top cpu 2}%
${goto 12}${color1}${top name 3}$alignr$color${top cpu 3}%
${goto 12}${color1}${top name 4}$alignr$color${top cpu 4}%
${goto 12}${color1}${top name 5}$alignr$color${top cpu 5}%
# ${goto 12}${color1}${top name 6}$alignr$color${top cpu 6}%
# ${goto 12}${color1}${top name 7}$alignr$color${top cpu 7}%
# ${goto 12}${color1}${top name 8}$alignr$color${top cpu 8}%
# ${goto 12}${color1}${top name 9}$alignr$color${top cpu 9}%
# ${goto 12}${color1}${top name 10}$alignr$color${top cpu 10}%
${voffset 14}${goto 12}${color0} ${color1}RAM ${color0}${hr}

${color0}${goto 12}$mem/$memmax ${alignr 5}$memperc%
${color0}${goto 12}${membar 8,254}${color}
${goto 12}${voffset 5}${color1}${top_mem name 1}$alignr$color${top_mem mem_res 1}
${goto 12}${color1}${top_mem name 2}$alignr$color${top_mem mem_res 2}
${goto 12}${color1}${top_mem name 3}$alignr$color${top_mem mem_res 3}
${goto 12}${color1}${top_mem name 4}$alignr$color${top_mem mem_res 4}
${goto 12}${color1}${top_mem name 5}$alignr$color${top_mem mem_res 5}
# ${goto 12}${color1}${top_mem name 6}$alignr$color${top_mem mem_res 6}
# ${goto 12}${color1}${top_mem name 7}$alignr$color${top_mem mem_res 7}
# ${goto 12}${color1}${top_mem name 8}$alignr$color${top_mem mem_res 8}
# ${goto 12}${color1}${top_mem name 9}$alignr$color${top_mem mem_res 9}
# ${goto 12}${color1}${top_mem name 10}$alignr$color${top_mem mem_res 10}
# ${color1}${hr}${color}

${goto 12}${color0} ${color1}Wireless ${color0}${hr}

${goto 12}${color0}SSID${color1}${alignr}${wireless_essid wlp3s0}
${goto 12}${color0}Total Down/Up${color1}${alignr}${totaldown wlp3s0}/${totalup wlp3s0}
${goto 12}${color0}Speed Down/Up${color1}${alignr}${downspeed wlp3s0}/${upspeed wlp3s0}

${goto 12}${color0} ${color1}Filesystem ${color0}${hr}

${goto 12}${fs_used /}/${fs_size} ${alignr 5}${fs_used_perc /}%
${goto 12}${fs_bar 8,254 /}

${goto 12}${color0} ${color1}Battery ${color0}${hr}

${goto 12}${battery_percent BAT1}%
${goto 12}${battery_bar 8,254 BAT1}
${voffset 5}${goto 12}${color0}Time Left${alignr}${color1}${battery_time BAT1}
${goto 12}${color0}Status${alignr}${color1}${battery_status BAT1}

# ${voffset 18}${color1}${alignc}${font4}DWM KEYBINDINGS${font}${color}
# ${color1}${hr}${color}
# ${color1}[S]+[RET]${alignr}${color0}open terminal${color}
# ${color1}[S]+b${alignr}${color0}open qutebrowser${color}
# ${color1}[S]+[SHIFT]+[RET]${alignr}${color0}run prompt${color}
# ${color1}[S]+[SHIFT]+c${alignr}${color0}close window${color}
# ${color1}[S]+j/k${alignr}${color0}move win focus${color}
# ${color1}[S]+[SHIFT]+hjkl${alignr}${color0}move window${color}
# ${color1}[S]+[1-9]${alignr}${color0}switch workspace${color}
# ${color1}[S]+[SHIFT]+[1-9]${alignr}${color0}send window${color}
# ${color1}[S]+h/l${alignr}${color0}shrink/expand${color}
# ${color1}${hr}${color}
# ${color1}[S]+e, e${alignr}${color0}launch emacs${color}
# ${color1}[S]+e, b${alignr}${color0}ibuffer${color}
# ${color1}[S]+e, d${alignr}${color0}dired${color}
# ${color1}[S]+e, n${alignr}${color0}elfeed${color}
# ${color1}[S]+e, s${alignr}${color0}eshell${color}
# ${color1}[S]+e, v${alignr}${color0}vterm${color}
# ${color1}${hr}${color}
# ${color1}[S]+p, h${alignr}${color0}dm-hub${color}
# ${color1}[S]+p, b${alignr}${color0}dm-setbg${color}
# ${color1}[S]+p, e${alignr}${color0}dm-confedit${color}
# ${color1}[S]+p, m${alignr}${color0}dm-man${color}
# ${color1}[S]+p, o${alignr}${color0}dm-bookman${color}
# ${color1}[S]+p, s${alignr}${color0}dm-websearch${color}
# ${color1}${hr}${color}
# ${color1}[S]+[SHIFT]+r${alignr}${color0}restart dwm${color}
# ${color1}[S]+[SHIFT]+q${alignr}${color0}quit dwm${color}
]];
